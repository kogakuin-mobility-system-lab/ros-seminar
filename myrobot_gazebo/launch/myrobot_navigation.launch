<launch>
  <!-- Arguments -->

  <arg name="map_file" default="$(find myrobot_gazebo)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>


  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find myrobot_gazebo)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find myrobot_gazebo)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find myrobot_gazebo)/rviz/turtlebot3_navigation.rviz"/>
  </group>
</launch>
